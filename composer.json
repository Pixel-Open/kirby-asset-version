
{
  "name": "pixelopen/kirby-asset-version",
  "type": "kirby-plugin",
  "description": "A plugin for Kirby CMS to add modification timestamps to css and js files",
  "homepage": "https://github.com/Pixel-Open/kirby-asset-version",
  "license": "MIT",
  "authors": [
    {
      "name": "Pixel Open",
      "homepage": "https://pixel-open.org/"
    }
  ],
  "keywords": [
    "kirby-cms",
    "kirby-plugin"
  ],
  "require": {
    "php": ">=8.0.0",
    "getkirby/composer-installer": "^1.2",
    "getkirby/cms": "^3.9.0||^4.0.0||^5.0.0"
  },
  "extra": {
    "installer-name": "asset-version"
  },
  "require-dev": {
    "symplify/easy-coding-standard": "^12.0",
    "phpunit/phpunit": "^10.0"
  },
  "config": {
    "allow-plugins": {
      "getkirby/composer-installer": true
    },
    "platform": {
      "php": "8.2"
    }
  }
}
